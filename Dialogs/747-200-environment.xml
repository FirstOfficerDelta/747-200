<?xml version="1.0"?>

<PropertyList>
  <name>747-200-environment</name>
  <layout>vbox</layout>
  <width>500</width>

  <group>
    <layout>hbox</layout>
    
    <empty><stretch>1</stretch></empty>

    <text>
      <label>747-200 environment</label>
    </text>

    <empty><stretch>1</stretch></empty>

    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

  <hrule><dummy/></hrule>
  
  <text>
    <label>Visual effects  ~</label>
  </text>

  <text>
    <label></label>
  </text>

  <text>
    <label></label>
  </text>

  <group>
    <layout>hbox</layout>

    <group>
     <layout>vbox</layout>

     <checkbox>
      <label>contrails</label>
      <property>/controls/environment/contrails</property>
      <binding>
       <command>property-toggle</command>
       <property>/controls/environment/contrails</property>
      </binding>
     </checkbox>
    </group>
  </group>

  <text>
    <label></label>
  </text>

  <text>
    <label></label>
  </text>

  <group>
   <layout>hbox</layout>

   <button>
    <legend>Back</legend>
    <key>b</key>
    <binding>
      <command>dialog-apply</command>
    </binding>
    <binding>
     <command>dialog-show</command>
     <dialog-name>747-200-menu</dialog-name>
    </binding>
    <binding>
      <command>dialog-close</command>
    </binding>
   </button>

   <button>
    <legend>Close</legend>
    <default>true</default>
    <key>Esc</key>
    <binding>
      <command>dialog-apply</command>
    </binding>
    <binding>
      <command>dialog-close</command>
    </binding>
   </button>

  </group>
</PropertyList>
