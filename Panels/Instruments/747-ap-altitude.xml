<?xml version="1.0"?>

<!-- Altitude switch -->

<PropertyList>

 <name>Altitude switch</name>
 <w-base>150</w-base>
 <h-base>100</h-base>


 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/747-200/Panels/Instruments/Textures/747-ap-altitude.rgb</path>
    <x1>0.0</x1>
    <y1>0.0</y1>
    <x2>1.0</x2>
    <y2>1.0</y2>
   </texture>
   <w>100</w>
   <h>100</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-25</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>lamp hold</name>
   <type>switch</type>

   <layer>
    <name>on</name>
    <type>group</type>
    <condition>
     <equals>
      <property>/controls/autoflight/altitude</property>
      <value>altitude-hold</value>
     </equals>
    </condition>

    <layer include="747-bulb-led-on.xml">
     <w>20</w>
     <h>20</h>
    </layer>
    <layer>
     <name>knob on</name>
     <texture>
      <path>Aircraft/747-200/Panels/Instruments/Textures/led.rgb</path>
      <x1>0.25</x1>
      <y1>0.0</y1>
      <x2>0.5</x2>
      <y2>0.25</y2>
     </texture>
     <w>20</w>
     <h>20</h>
     <emissive>true</emissive>
    </layer>
   </layer>

   <layer>
    <name>off</name>
    <type>group</type>

    <layer include="747-bulb-led-off.xml">
     <w>20</w>
     <h>20</h>
    </layer>
    <layer>
     <name>knob off</name>
     <texture>
      <path>Aircraft/747-200/Panels/Instruments/Textures/led.rgb</path>
      <x1>0.25</x1>
      <y1>0.0</y1>
      <x2>0.5</x2>
      <y2>0.25</y2>
     </texture>
     <w>20</w>
     <h>20</h>
    </layer>
   </layer>
   <transformations>
    <transformation>
    <type>x-shift</type>
     <offset>-35</offset>
    </transformation>
    <transformation>
    <type>y-shift</type>
     <offset>38</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>lamp select</name>
   <type>switch</type>

   <layer>
    <name>on</name>
    <type>group</type>
    <condition>
     <equals>
      <property>/controls/autoflight/altitude</property>
      <value>altitude-select</value>
     </equals>
    </condition>

    <layer include="747-bulb-led-on.xml">
     <w>20</w>
     <h>20</h>
    </layer>
    <layer>
     <name>knob on</name>
     <texture>
      <path>Aircraft/747-200/Panels/Instruments/Textures/led.rgb</path>
      <x1>0.25</x1>
      <y1>0.0</y1>
      <x2>0.5</x2>
      <y2>0.25</y2>
     </texture>
     <w>20</w>
     <h>20</h>
     <emissive>true</emissive>
    </layer>
   </layer>

   <layer>
    <name>off</name>
    <type>group</type>

    <layer include="747-bulb-led-off.xml">
     <w>20</w>
     <h>20</h>
    </layer>
    <layer>
     <name>knob off</name>
     <texture>
      <path>Aircraft/747-200/Panels/Instruments/Textures/led.rgb</path>
      <x1>0.25</x1>
      <y1>0.0</y1>
      <x2>0.5</x2>
      <y2>0.25</y2>
     </texture>
     <w>20</w>
     <h>20</h>
    </layer>
   </layer>
   <transformations>
    <transformation>
    <type>x-shift</type>
     <offset>-35</offset>
    </transformation>
    <transformation>
    <type>y-shift</type>
     <offset>-37</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Altitude switch</name>
   <type>switch</type>
   <layer>
    <name>on</name>
    <condition>
     <equals>
      <property>/controls/autoflight/altitude</property>
      <value>altitude-hold</value>
     </equals>
    </condition>
    <texture>
     <path>Aircraft/747-200/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.74</y1>
     <x2>0.25</x2>
     <y2>1.0</y2>
    </texture>
    <w>40</w>
    <h>40</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>2.75</offset>
     </transformation>
    </transformations>
   </layer>
   <layer>
    <name>off</name>
    <condition>
     <equals>
      <property>/controls/autoflight/altitude</property>
      <value>altitude-select</value>
     </equals>
    </condition>
    <texture>
     <path>Aircraft/747-200/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>0.25</x2>
     <y2>0.31</y2>
    </texture>
    <w>40</w>
    <h>47</h>
   </layer>
   <layer>
    <name>3rd state</name>
    <texture>
     <path>Aircraft/747-200/Panels/Instruments/Textures/switches.rgb</path>
     <x1>0.0</x1>
     <y1>0.47</y1>
     <x2>0.25</x2>
     <y2>0.745</y2>
    </texture>
    <w>40</w>
    <h>42</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>1.5</offset>
     </transformation>
    </transformations>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-34</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Disable</name>
   <condition>
    <not-equals>
     <property>/controls/autoflight/altitude</property>
     <value></value>
    </not-equals>
   </condition>
   <button>0</button>
   <x>-5</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>nasal</command>
    <script>globals.Boeing747.autopilotsystem.aptogglealtitudeexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>Toggle altitude select</name>
   <condition>
    <not-equals>
     <property>/controls/autoflight/altitude</property>
     <value>altitude-select</value>
    </not-equals>
   </condition>
   <button>0</button>
   <x>-55</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>nasal</command>
    <script>globals.Boeing747.autopilotsystem.apaltitudeselectexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>Toggle altitude hold</name>
   <condition>
    <equals>
     <property>/controls/autoflight/altitude</property>
     <value>altitude-select</value>
    </equals>
   </condition>
   <button>0</button>
   <x>-55</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>nasal</command>
    <script>globals.Boeing747.autopilotsystem.apaltitudeholdexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>
 
</PropertyList>
