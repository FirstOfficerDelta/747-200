<PropertyList>

 <name>Engine EGT degrees C</name>
 <w-base>128</w-base>
 <h-base>128</h-base>

 <params>
  <egt-select>/engines/engine[0]/egt-degf</egt-select>
 </params>

 <layers>

  <layer>
   <name>background</name>
   <w>110</w>
   <h>110</h>
   <texture>
    <path>Aircraft/747-200/Panels/Instruments/Textures/747-egt.rgb</path>
    <x1>0</x1>
    <y1>0</y1>
    <x2>1</x2>
    <y2>1</y2>
   </texture>
  </layer>

  <layer>
   <name>Power management</name>
   <type>switch</type>

   <layer>
    <name>EGT display</name>
    <condition include="747-cond-voltage-inst.xml"/>
    <type>text</type>
    <font>led</font>
    <point-size>8</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>number-value</type>
      <property alias="../../../../../../params/egt-select"/>
      <scale>0.55555556</scale> <!-- Fahrenheit to Celsius -->
      <offset>17.777778</offset>
      <format>%4.0f</format>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-40</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>15</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>OFF flag</name>
    <texture>
     <path>Aircraft/747-200/Panels/Instruments/Textures/misc-1.rgb</path>
     <x1>0.9375</x1>
     <y1>0.5</y1>
     <x2>1.0</x2>
     <y2>0.546875</y2>
    </texture>
    <w>20</w>
    <h>8</h>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>16</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>0</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>

  <layer>
   <name>big needle</name>
   <w>6</w>
   <h>48</h>
   <texture>
    <path>Aircraft/747-200/Panels/Instruments/Textures/misc-1.rgb</path>
    <x1>0.8</x1>
    <y1>0.78125</y1>
    <x2>0.8375</x2>
    <y2>1.0</y2>
   </texture>
   <transformations>
    <transformation>
     <type>rotation</type>
     <condition include="747-cond-voltage-inst.xml"/>
     <property alias="../../../../../params/egt-select"/>
     <scale>0.15</scale> <!-- x 270 deg/1000 degC -> Fahrenheit to Celsius -->
     <offset>4.8</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>20.0</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>glare shield</name>
   <texture>
    <path>Aircraft/747-200/Panels/Instruments/Textures/bezel1.rgb</path>
    <x1>0.5</x1>
    <y1>0.0</y1>
    <x2>1.0</x2>
    <y2>0.5</y2>
   </texture>
   <w>128</w>
   <h>128</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>3</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>
</PropertyList>
