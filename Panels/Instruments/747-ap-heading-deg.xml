<?xml version="1.0"?>

<!-- -->

<PropertyList>

 <name>Dial heading</name>
 <w-base>150</w-base>
 <h-base>150</h-base>

 <params>
  <hdg-ctrl>/controls/autoflight/dial-heading-deg</hdg-ctrl>
  <hdg-auto>/autopilot/settings/heading-bug-deg</hdg-auto>
 </params>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/747-200/Panels/Instruments/Textures/747-black-bg.rgb</path>
   </texture>
    <w>70</w>
    <h>30</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>15</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>36</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>button</name>
   <texture>
    <path>Aircraft/747-200/Panels/Instruments/Textures/747-white-led.rgb</path>
   </texture>
    <w>35</w>
    <h>35</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>14</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-0</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>magnetic heading display</name>
   <type>text</type>
   <font>led</font>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property alias="../../../../../params/hdg-ctrl"/>
     <format>%03.0f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-5</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>25</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>14</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>HEADING</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-21</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>60</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

<!-- magnetic heading -->

  <action>
   <name>Plus 10</name>
   <button>0</button>
   <x>0</x>
   <y>-1</y>
   <w>15</w>
   <h>15</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/hdg-ctrl"/>
    <step>10</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
   <binding>
    <condition>
     <equals>
      <property>/controls/autoflight/heading</property>
      <value>dg-heading-hold</value>
     </equals>
    </condition>
    <command>property-assign</command>
    <property alias="../../../../params/hdg-auto"/>
    <property n="1" alias="../../../../params/hdg-ctrl"/>
   </binding>
  </action>

  <action>
   <name>Minus 10</name>
   <x>0</x>
   <y>-17</y>
   <w>15</w>
   <h>15</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/hdg-ctrl"/>
    <step>-10</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
   <binding>
    <condition>
     <equals>
      <property>/controls/autoflight/heading</property>
      <value>dg-heading-hold</value>
     </equals>
    </condition>
    <command>property-assign</command>
    <property alias="../../../../params/hdg-auto"/>
    <property n="1" alias="../../../../params/hdg-ctrl"/>
   </binding>
  </action>

  <action>
   <name>Plus 1</name>
   <button>0</button>
   <x>14</x>
   <y>-1</y>
   <w>15</w>
   <h>15</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/hdg-ctrl"/>
    <step>1</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
   <binding>
    <condition>
     <equals>
      <property>/controls/autoflight/heading</property>
      <value>dg-heading-hold</value>
     </equals>
    </condition>
    <command>property-assign</command>
    <property alias="../../../../params/hdg-auto"/>
    <property n="1" alias="../../../../params/hdg-ctrl"/>
   </binding>
  </action>

  <action>
   <name>Minus 1</name>
   <button>0</button>
   <x>14</x>
   <y>-17</y>
   <w>15</w>
   <h>15</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/hdg-ctrl"/>
    <step>-1</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
   <binding>
    <condition>
     <equals>
      <property>/controls/autoflight/heading</property>
      <value>dg-heading-hold</value>
     </equals>
    </condition>
    <command>property-assign</command>
    <property alias="../../../../params/hdg-auto"/>
    <property n="1" alias="../../../../params/hdg-ctrl"/>
   </binding>
  </action>

 </actions>

</PropertyList>
