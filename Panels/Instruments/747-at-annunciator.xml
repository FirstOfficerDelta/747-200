<?xml version="1.0"?>

<!-- 747 autothrottle annunciator :
-->

<PropertyList>

 <name>Autothrottle annunciator</name>
 <w-base>30</w-base>
 <h-base>90</h-base>

 <layers>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>9</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>A/T</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
    <type>x-shift</type>
     <offset>-8</offset>
    </transformation>
    <transformation>
    <type>y-shift</type>
     <offset>36</offset>
    </transformation>
   </transformations>
  </layer>

<!-- translucent lens -->  
  <layer>
   <name>Mach</name>
   <type>switch</type>

   <layer>
    <name>on</name>
    <type>group</type>
    <condition>
     <and include="747-cond-voltage-inst.xml">
      <equals>
       <property>/autopilot/locks/speed</property>
       <value>mach-with-throttle</value>
      </equals>
     </and>
    </condition>

    <layer include="747-bulb-on.xml">
     <w>30</w>
     <h>15</h>
    </layer>
    <layer>
     <name>background on</name>
     <texture>
      <path>Aircraft/747-200/Panels/Instruments/Textures/747-green-mach.rgb</path>
      <x1>0.0</x1>
      <y1>0.25</y1>
      <x2>1.0</x2>
      <y2>0.75</y2>
     </texture>
     <w>30</w>
     <h>15</h>
     <emissive>true</emissive>
    </layer>
   </layer>

   <layer>
    <name>off</name>
    <type>group</type>

    <layer include="747-bulb-off.xml">
     <w>30</w>
     <h>15</h>
    </layer>
    <layer>
     <name>background off</name>
     <texture>
      <path>Aircraft/747-200/Panels/Instruments/Textures/747-green-mach.rgb</path>
      <x1>0.0</x1>
      <y1>0.25</y1>
      <x2>1.0</x2>
      <y2>0.75</y2>
     </texture>
     <w>30</w>
     <h>15</h>
    </layer>
   </layer>

   <transformations>
    <transformation>
    <type>y-shift</type>
     <offset>25</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
