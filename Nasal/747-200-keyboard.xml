     <command>nasal</command>
     <script>globals.Boeing747.menuscreen.navigationexport();</script>
    </binding>
   </key>

   <key n="261">
    <name>F5</name>
    <repeatable type="bool">true</repeatable>
    <mod-shift>
     <desc>Scroll view aft / Scroll panel down</desc>
     <binding>
      <command>nasal</command>
      <script>
        if( getprop("/sim/panel/visibility") ) {
            var offset = getprop("/sim/panel/y-offset");
            if( offset == nil ) {
                offset = 0;
            }
            setprop("/sim/panel/y-offset", offset - 5);
        }
        else {
            globals.Boeing747.seatsystem.movelengthexport(0.01);
        }
      </script>
     </binding>
    </mod-shift>
    <mod-ctrl>
     <desc>Scroll view down</desc>
     <binding>
      <command>nasal</command>
      <script>globals.Boeing747.seatsystem.moveheightexport(-0.01);</script>
     </binding>
    </mod-ctrl>
   </key>

   <key n="262">
    <name>F6</name>
