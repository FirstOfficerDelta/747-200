   <key n="357">
    <name>Up</name>
    <desc>Increase autopilot pitch (slow)</desc>
    <mod-ctrl>
     <binding>
      <command>nasal</command>
      <script>
       if( !globals.Boeing747.autopilotsystem.adjustexport(0.1) ) {
           # default
       }
      </script>
     </binding>
    </mod-ctrl>
   </key>

   <key n="359">
    <name>Down</name>
    <desc>Decrease autopilot pitch (slow)</desc>
    <repeatable type="bool">true</repeatable>
    <mod-ctrl>
     <binding>
      <command>nasal</command>
      <script>
       if( !globals.Boeing747.autopilotsystem.adjustexport(-0.1) ) {
           # default
       }
      </script>
     </binding>
    </mod-ctrl>
   </key>

</PropertyList>
